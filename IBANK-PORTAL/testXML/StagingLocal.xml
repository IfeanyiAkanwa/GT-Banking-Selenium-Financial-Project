<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="IBANKSuite" parallel="tests" thread-count="3">
	<parameter name="groupReport" value="/ibank.html" />
	<parameter name="toMails" value="kakaageraldine@gmail.com" />
	<parameter name="myBrowser" value="chrome" />
	<parameter name="environment" value="chrome" />
	<parameter name="server" value="local" />
	<parameter name="config" value="parallel.conf.json" />
	<parameter name="downloadPath" value="/home/seluser/Downloads/" />
	<parameter name="testEnv" value="stagingData" />

	<test name="Login" preserve-order="true">
		<parameter name="myBrowser" value="chrome" />
		<classes>
			<class name="testCases.Login">
				<methods>
					<include name="accountNumberLoginValidationTest"></include>
					<include name="phoneNumberLoginValidationTest"></include>
					<include name="userIDLoginValidationTest"></include>
					<include name="emailLoginValidationTest"></include>
					<include name="loginLinksValidationTest"></include>
					<include name="rememberMeValidationTest"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Login2" preserve-order="true">
		<parameter name="myBrowser" value="chrome" />
		<classes>
			<class name="testCases.Login">
				<methods>
					<include name="validAccountNumberLoginTest"></include>
					<include name="validEmailLoginTest"></include>
					<include name="validPhoneNumberLoginTest"></include>
					<include name="validUserIDLoginTest"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="LandingPage" preserve-order="true">
		<parameter name="myBrowser" value="chrome" />
		<classes>
			<class name="testCases.LandingPage">
				<methods>
					<include name="Login"></include>
					<include name="navigateToLandingPageTest"></include>
					<include name="navigateToDashboardTest"></include>
				</methods>
			</class>
		</classes>
	</test>
	
</suite>  <!-- Suite -->